<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent">
    
    <TextView 
    	android:text="TextView" 
    	android:id="@+id/title" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content">
    </TextView>
    <TextView 
    	android:text="TextView" 
    	android:id="@+id/x_axis_val" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content">
    </TextView>
    <TextView 
    	android:text="TextView" 
    	android:id="@+id/y_axis_val" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content">
    </TextView>
    <TextView 
    	android:text="TextView"
    	android:orientation="horizontal" 
    	android:id="@+id/z_axis_val" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	>
    </TextView>
    <Button 
    	android:text="Button" 
    	android:id="@+id/request" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content">
    </Button>
    <TextView android:text="TextView" android:id="@+id/nxt_status" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <LinearLayout android:id="@+id/linearLayout1" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:layout_gravity="bottom">
        <Button android:text="Calibrate" 
        	android:id="@+id/calibrate" 
        	android:layout_width="wrap_content" android:layout_gravity="bottom" android:layout_height="fill_parent">
        </Button>
        <Button android:text="Transmit" 
        	android:id="@+id/transmit" 
        	android:layout_width="fill_parent" android:layout_gravity="bottom" android:layout_height="fill_parent">
        </Button>
        
    		
    </LinearLayout>
</LinearLayout>
